package com.skilldistillery.todoapp.repositories;

import java.util.Set;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Service;

import com.skilldistillery.todo.entities.Todo;

@Service
public interface TodoRepository extends JpaRepository<Todo, Integer> {

	List<Todo>findByUser_Username(String username);
	
	Todo findById(String username, int id);
	
	boolean existsByUsernameAndId(String username, int tid);

}
